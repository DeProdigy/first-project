<h1>Create a new game</h1>
<br>
<h2>Pick a friend to play with</h2>
<div>

  <%= form_for Game.new do |f| %>
    <%= f.radio_button :player_2, "#{@player_choice_1.identifier}" %>
    <%= f.label :player_2, "#{@player_choice_1.name}", :value => "#{@player_choice_1.identifier}" %><br>
    <%= f.radio_button :player_2, "#{@player_choice_2.identifier}" %>
    <%= f.label :player_2, "#{@player_choice_2.name}", :value => "#{@player_choice_2.identifier}" %><br>
    <%= f.radio_button :player_2, "#{@player_choice_3.identifier}" %>
    <%= f.label :player_2, "#{@player_choice_3.name}", :value => "#{@player_choice_3.identifier}" %><br>
    <%= f.radio_button :player_2, "#{@player_choice_4.identifier}" %>
    <%= f.label :player_2, "#{@player_choice_4.name}", :value => "#{@player_choice_4.identifier}" %><br>
    <%= f.radio_button :player_2, "#{@player_choice_5.identifier}" %>
    <%= f.label :player_2, "#{@player_choice_5.name}", :value => "#{@player_choice_5.identifier}" %>
  <br>
  <br>
  <h2>Choose a gender to play with</h2>

    <%= f.radio_button :gender, "male" %>
    <%= f.label :gender, "male", :value => "male" %><br>
    <%= f.radio_button :gender, "female" %>
    <%= f.label :gender, "female", :value => "female" %><br>
    <br>
    <%= f.hidden_field :player_1, :value => "#{@player_1}" %>
    <%= f.submit %>
  <% end %>

<div>
<br>
<h4>If you want a different set of people, please refresh the page</h4>





